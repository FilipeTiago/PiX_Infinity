sudo tee /usr/local/bin/ss-daemon >/dev/null <<'SH'
#!/bin/bash
set -euo pipefail

# Tune here or via env
: "${IDLE_MS:=120000}"        # 2 minutes idle before starting saver
: "${HARD_OFF_MS:=0}"         # e.g. 900000 for 15 minutes to power off
: "${REQUIRE_SILENT:=1}"      # 1 = do not start if audio RUNNING

export IDLE_MS HARD_OFF_MS REQUIRE_SILENT

while :; do
  /usr/local/bin/ss-youtube || true
  # brief pause to avoid tight loops on rapid activity
  sleep 2
done
SH
sudo chmod +x /usr/local/bin/ss-daemon
