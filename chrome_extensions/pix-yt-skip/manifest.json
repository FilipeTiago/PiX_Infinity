{
  "name": "PIX YouTube Cleaner",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Auto-skip/mute/speed ads on YouTube and hide overlays.",
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://m.youtube.com/*"
  ],
  "permissions": ["declarativeNetRequest", "declarativeNetRequestWithHostAccess"],
  "declarative_net_request": {
    "rule_resources": [
      { "id": "rules", "enabled": true, "path": "rules_1.json" }
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://m.youtube.com/*"],
      "js": ["yt-skip.js"],
      "run_at": "document_idle"
    }
  ]
}
