# installers/pix.env
set -euo pipefail

# Canonical locations
PIX_PREFIX="/opt/pix-infinity"
PIX_BIN="/usr/local/bin"
PIX_ETC="/etc/pix-infinity"
PIX_SYSTEMD="/etc/systemd/system"

# EmulationStation + themes (tune if yours differ)
ES_CFG="/opt/retropie/configs/all/emulationstation"
ES_THEMES_DIR="${ES_CFG}/themes"
PIX_THEME_SRC="themes/epicnoir"        # in repo
PIX_THEME_NAME="epicnoir"

# Detect repo root (when running from repo)
REPO_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

# Helpers
say() { printf "\033[1;32m[PiX]\033[0m %s\n" "$*"; }
warn(){ printf "\033[1;33m[PiX]\033[0m %s\n" "$*"; }
die() { printf "\033[1;31m[PiX]\033[0m %s\n" "$*" >&2; exit 1; }