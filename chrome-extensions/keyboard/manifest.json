{

   "background": {
      "service_worker": "/js/background.js"
   },
   "default_locale": "en",
   "description": "__MSG_application_description__",
   "icons": {
      "128": "icon-128.png",
      "16": "icon-16.png",
      "48": "icon-48.png"
   },
   "manifest_version": 3,
   "name": "__MSG_application_title__",
   "offline_enabled": true,
   "action": {
      "default_icon": "icon-128.png",
      "default_popup": "toggle.html",
      "default_title": "Virtual Keyboard Toggle"
   },
   "permissions": [
      "activeTab", "scripting", "storage"
   ],
   "host_permissions": ["<all_urls>"],
   "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["js/ping.js", "js/osk_shadow.js"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
   }],
   "version": "3.0.1",
   "web_accessible_resources": [
      {
         "resources": [
            "keyboard.html",
            "layouts/keyboard_*.html",
            "style.css",
            "options/*",
            "toggle.html",
            "toggle.js",
            "icons/*",
            "icons/backspace.png",
            "icons/backspace-e.png",
            "icons/close.png",
            "icons/enter.png",
            "icons/enter-e.png",
            "icons/settings.png",
            "icons/shift.png",
            "buttons/*",
            "buttons/keyboard_1.png",
            "buttons/keyboard_2.png",
            "buttons/keyboard_3.png"
         ],
         "matches": [
            "<all_urls>"
         ]
      }
   ]
}
